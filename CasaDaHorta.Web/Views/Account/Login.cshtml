@model CasaDaHorta.Web.ViewModel.Account.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <h1 class="display-4">Login na Casa da Horta</h1>
</div>

<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Login" asp-controller="Account" method="post" asp-route-returnurl="@ViewBag.ReturnUrl">
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Email">
    </div>
    <div class="form-group">
        <label asp-for="Password">Senha</label>
        <input type="password" asp-for="Password" class="form-control" placeholder="Senha">
    </div>
    <button type="submit" class="btn btn-primary">Entrar</button>

</form>

<div>
    <a asp-action="Register">Register</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
